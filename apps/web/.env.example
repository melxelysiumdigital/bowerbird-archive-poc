# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://azure-ai-searchpoc.search.windows.net
AZURE_SEARCH_INDEX=fulltext-poc
AZURE_SEARCH_API_KEY=your-azure-search-api-key

# Shopify Storefront (public — exposed to browser)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your-storefront-token

# Shopify Admin (server-only — never exposed to browser)
SHOPIFY_ADMIN_ACCESS_TOKEN=your-admin-token

# Shopify Customer Account API (public — exposed to browser)
NEXT_PUBLIC_SHOPIFY_CUSTOMER_ACCOUNT_CLIENT_ID=your-client-id
NEXT_PUBLIC_SHOPIFY_SHOP_ID=your-numeric-shop-id
